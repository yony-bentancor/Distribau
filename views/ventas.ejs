  </label>

  <label>T√©cnico:
    <select name="tecnico">
      <% ['Maxi','Gast√≥n','Mario','Marcelo','Gustavo','Camilo','Ismael'].forEach(t => { %>
        <option value="<%= t %>"><%= t %></option>
      <% }) %>
    </select>
  </label>

  <label>Usuario que carga:
    <select name="usuarioCarga">
      <% ['admin','soporte','ventas1'].forEach(u => { %>
        <option value="<%= u %>"><%= u %></option>
