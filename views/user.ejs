<body>
  <div class="grid">
    <!-- Bodega del t√©cnico -->
    <section>
      <h2>üì¶ Tu Bodega</h2>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% componentes.forEach(c => { %>
            <tr>
              <td><%= c.componente.nombre %></td>
              <td><%= c.cantidad %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Bodega central -->
    <section>
      <h2>üè¢ Bodega Central</h2>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Stock</th>
          </tr>
        </thead>
        <tbody>
          <% stockCentral.forEach(c => { %>
            <tr>
              <td><%= c.nombre %></td>
              <td><%= c.stock || 0 %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
