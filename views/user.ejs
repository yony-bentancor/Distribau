<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>TECNICO | Componentes y Stock</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * { box-sizing: border-box; }
    body {
      font-family: "Segoe UI", sans-serif;
      margin: 0;
      background: #e9ecef;
      color: #212529;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1rem;
      padding: 1.5rem;
    }

    section {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    h2 {
      margin-top: 0;
      color: #2c3e50;
      font-size: 1.2rem;
      border-bottom: 2px solid #ccc;
      padding-bottom: 0.5rem;
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }

    th, td {
      padding: 0.6rem;
      text-align: left;
      border-bottom: 1px solid #dee2e6;
    }

    thead {
      background-color: #007bff;
      color: white;
    }

    tr:hover {
      background-color: #f1f3f5;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    input, select, textarea {
      padding: 0.5rem;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 1rem;
    }

    button {
      padding: 0.6rem;
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    button:hover {
      background-color: #218838;
    }

    label {
      font-weight: 600;
    }

    .checkbox-row {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-top: 0.5rem;
    }

    @media (max-width: 900px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="grid">
    <!-- Bodega del técnico -->
    <section>
      <h2>📦 Tu Bodega</h2>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% componentes.forEach(c => { %>
            <tr>
              <td><%= c.componente.nombre %></td>
              <td><%= c.cantidad %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Bodega central -->
    <section>
      <h2>🏢 Bodega Central</h2>
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Stock</th>
          </tr>
        </thead>
        <tbody>
          <% stockCentral.forEach(c => { %>
            <tr>
              <td><%= c.nombre %></td>
              <td><%= c.stock || 0 %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Formulario de nueva actividad -->
    <section>
      <h2>📋 Nueva Actividad</h2>
      <form method="POST" action="/actividades">
        <label>Número de actividad</label>
        <input type="text" name="numero" required>

        <label>Fecha</label>
        <input type="date" name="fecha" required>

        <label>Tipo</label>
        <select name="tipo" required>
          <option value="instalacion">Instalación</option>
          <option value="ampliacion">Ampliación</option>
          <option value="continuacion">Continuación</option>
          <option value="reduccion">Reducción</option>
          <option value="desinstalacion">Desinstalación</option>
          <option value="reparacion">Reparación</option>
        </select>

        <label>Puntaje adicional (opcional)</label>
        <input type="number" step="0.01" name="puntajeExtra">

        <div class="checkbox-row">
          <label><input type="checkbox" name="traslado"> Puntaje por traslado</label>
          <label><input type="checkbox" name="comunicarse"> Comunicarse</label>
          <label><input type="checkbox" name="usaKm" id="usaKm"> ¿Incluye km?</label>
        </div>

        <div id="campoKm" style="display: none;">
          <label>Kilómetros</label>
          <input type="number" step="1" name="km">
        </div>

        <label>Estado</label>
        <select name="estado" required>
          <option value="realizado">Realizado</option>
          <option value="cancelado">Cancelado</option>
          <option value="pendiente">Pendiente</option>
        </select>

        <button type="submit">Guardar Actividad</button>
      </form>
    </section>
  </div>

  <script>
    // Mostrar/ocultar campo km
    document.addEventListener("DOMContentLoaded", () => {
      const usaKm = document.getElementById("usaKm");
      const campoKm = document.getElementById("campoKm");

      usaKm.addEventListener("change", () => {
        campoKm.style.display = usaKm.checked ? "block" : "none";
      });
    });
  </script>
</body>
</html>
