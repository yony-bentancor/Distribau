<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>TECNICO | Componentes y Stock</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/user.css">
</head>
<body>
  <div class="grid">

    <!-- Bodega del t√©cnico -->
    <section>
      <h2>üì¶ Tu Bodega</h2>
      <table>
        <thead>
          <tr>
            <th>Modelo - Nombre</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% componentes.forEach(c => { %>
            <tr>
              <td><%= c.componente.modelo ? c.componente.modelo + " - " : "" %><%= c.componente.nombre %></td>
              <td><%= c.cantidad %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

   <!-- Bodega central -->
   <section>
    <h2>üè¢ Bodega Central</h2>
  
    <div id="bodega-central">
      <% 
      const modelosUnicos = {};
  
      stockCentral.forEach(c => {
        const modelo = c.modelo || "Sin Modelo";
        if (!modelosUnicos[modelo]) {
          modelosUnicos[modelo] = [];
        }
        modelosUnicos[modelo].push(c);
      });
      %>
  
      <% Object.keys(modelosUnicos).forEach(modelo => { %>
        <div class="modelo-group">
          <button type="button" class="btn-modelo" onclick="toggleComponentes('<%= modelo.replace(/\s+/g, '-') %>')">
            <span><%= modelo %></span>
            <span id="icono-<%= modelo.replace(/\s+/g, '-') %>">‚¨áÔ∏è</span>
          </button>
  
          <div id="comp-<%= modelo.replace(/\s+/g, '-') %>" class="componentes-lista" style="display:none; padding:10px; border-left:2px solid #007bff; margin-top:5px;">
            <table style="width: 100%;">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Stock</th>
                </tr>
              </thead>
              <tbody>
                <% modelosUnicos[modelo].forEach(comp => { %>
                  <tr>
                    <td><%= comp.nombre %></td>
                    <td><%= comp.stock || 0 %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
  




    <!-- Formulario de nueva actividad -->
    <section>
      <h2>üìã Nueva Actividad</h2>
      <form id="formActividad">
        <label>N√∫mero de actividad</label>
        <input type="text" name="numero" required>

        <label>Fecha</label>
        <input type="date" name="fecha" required>

        <label>Tipo de actividad</label>
        <select name="tipo" required>
          <option value="">Seleccionar...</option>
          <option value="instalacion">Instalaci√≥n</option>
          <option value="ampliacion">Ampliaci√≥n</option>
          <option value="continuacion">Continuaci√≥n</option>
          <option value="reduccion">Reducci√≥n</option>
          <option value="desinstalacion">Desinstalaci√≥n</option>
          <option value="reparacion">Reparaci√≥n</option>
        </select>

        <label>Componentes utilizados</label>
        <div id="componentesUsados"></div>
        <button type="button" onclick="agregarComponente()">‚ûï Agregar Componente</button>

        <label>Estado</label>
        <select name="estado">
          <option value="realizado">Realizado</option>
          <option value="cancelado">Cancelado</option>
          <option value="pendiente">Pendiente</option>
        </select>

        <label>
          <input type="checkbox" name="comunicarse"> ¬øHay que comunicarse?
        </label>

        <label>
          <input type="checkbox" id="usarKm" onchange="toggleKmInput(this)"> ¬øIncluye kil√≥metros?
        </label>
        <input type="number" name="km" id="kmInput" style="display:none;" placeholder="Kil√≥metros">

        <label>Comentario</label>
        <textarea name="comentario" rows="3"></textarea>

        <div class="acciones">
          <button type="submit">Guardar Actividad</button>
        </div>
      </form>
    </section>

    <!-- Panel de resumen de actividades -->
    <section>
      <h2>üìä Resumen de Actividades</h2>

      <div class="resumen-filtros">
        <button onclick="cargarResumen('dia')">Hoy</button>
        <button onclick="cargarResumen('semana')">Esta Semana</button>
        <button onclick="cargarResumen('mes')">Este Mes</button>
      </div>

      <table class="tabla-resumen">
        <thead>
          <tr>
            <th>N√∫mero</th>
            <th>Tipo</th>
            <th>Puntos</th>
            <th>Detalle</th>
          </tr>
        </thead>
        <tbody id="resumenCuerpo">
          <tr><td colspan="4" style="text-align:center;">Seleccione un filtro para ver actividades</td></tr>
        </tbody>
      </table>
      <div id="totalPuntos" style="text-align: right; margin-top: 0.5rem; font-weight: 600;"></div>

    </section>

  </div>

  <script src="/js/user.js"></script>
</body>
</html>
