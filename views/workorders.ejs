<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>√ìrdenes de trabajo</title>
  <link rel="stylesheet" href="/css/worders.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
  <header class="top-bar">
    <nav class="nav-buttons">
      <a href="/workorders" class="activo">üìã BODEGA T√âCNICOS</a>
      <a href="/admin">üè¢ BODEGA DISTRIBAU</a>
      <a href="/almacen">üì¶ PROSEGUR</a>
    </nav>
  </header>

  <main class="grid">
    <!-- Contenedor de tarjetas -->
   <div class="usuarios-grid">
  <% resultados.forEach(({ usuario, bodega, actividades }) => { %>
    <% if (usuario.username !== 'admin') { %>
      <div class="usuario-box">
        <h2><i class="fas fa-user-circle"></i> <%= usuario.username %></h2>

        <div class="bodega">
          <h3><i class="fas fa-box-open"></i> Bodega:</h3>
          <% if (bodega.length > 0) { %>
            <ul>
              <% bodega.forEach(item => { %>
                <li><%= item.componente?.nombre || "Componente eliminado" %> ‚Äî <strong><%= item.cantidad %></strong> u.</li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="small">Sin componentes en stock</p>
          <% } %>
        </div>

        <div class="actividades" style="margin-top: 1rem;">
          <h3><i class="fas fa-tasks"></i> Actividades recientes:</h3>
          <% if (actividades.length > 0) { %>
            <% actividades.slice(0, 3).forEach(act => { %>
              <div class="actividad-item">
                <div class="small">
                  <i class="far fa-calendar-alt"></i>
                  <%= new Date(act.fecha).toLocaleDateString() %> ‚Äî
                  <span class="badge badge-<%= act.estado %>"><%= act.estado %></span> ‚Äî
                  <strong><%= act.tipo %></strong>
                </div>
                <ul>
                  <% act.componentesUsados.forEach(c => { %>
                    <li><%= c.componente?.nombre || "Componente eliminado" %> ‚Äî <%= c.cantidad %> u.</li>
                  <% }) %>
                </ul>
              </div>
            <% }) %>
          <% } else { %>
            <p class="small">Sin actividades registradas</p>
          <% } %>
        </div>
      </div>
    <% } %>
  <% }) %>
</div>


    <!-- Exportar -->
    <div class="resumen-filtros" style="justify-content: center; margin-top: 2rem;">
      <button onclick="exportarExcel()">Exportar Excel</button>
      <button onclick="exportarPDF()">Exportar PDF</button>
      <button onclick="window.print()">Imprimir</button>
    </div>
  </main>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</body>
</html>
