<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Historial de Movimientos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: Arial, sans-serif; background: #f4f4f4; padding: 2rem; }
    table { width: 100%; border-collapse: collapse; background: white; }
    th, td { padding: 0.8rem; border: 1px solid #ccc; text-align: left; }
    th { background: #eee; }
    h2 { text-align: center; margin-bottom: 2rem; }
    ul { margin: 0; padding-left: 1rem; }
  </style>
  <style>
    .btn-rojo {
      background-color: #dc3545;
      color: white;
      border: none;
      padding: 8px 12px;
      margin: 10px 0;
      cursor: pointer;
      border-radius: 5px;
    }
  
    .btn-rojo:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <h2>üìã Historial de Movimientos</h2>


<form method="GET" style="margin-bottom: 2rem;">
  <label for="tecnico">T√©cnico:</label>
  <select name="tecnico" id="tecnico">
    <option value="">-- Todos --</option>
    <% tecnicos.forEach(t => { %>
      <option value="<%= t._id %>" <%= tecnicoSeleccionado == t._id ? 'selected' : '' %>><%= t.username %></option>
    <% }) %>
  </select>

  <label for="componente">Componente:</label>
  <select name="componente" id="componente">
    <option value="">-- Todos --</option>
    <% componentes.forEach(c => { %>
      <option value="<%= c._id %>" <%= componenteSeleccionado == c._id ? 'selected' : '' %>><%= c.nombre %></option>
    <% }) %>
  </select>

  <label for="desde">Desde:</label>
  <input type="date" name="desde" id="desde" value="<%= desde || '' %>">

  <label for="hasta">Hasta:</label>
  <input type="date" name="hasta" id="hasta" value="<%= hasta || '' %>">

  <button type="submit">üîç Filtrar</button>
</form>
<a href="/exportar-excel?<%= `tecnico=${tecnicoSeleccionado || ""}&componente=${componenteSeleccionado || ""}&desde=${desde || ""}&hasta=${hasta || ""}` %>" style="display:inline-block;margin-bottom:1rem;padding:0.5rem 1rem;background:#28a745;color:#fff;text-decoration:none;border-radius:5px;">‚¨áÔ∏è Exportar a Excel</a>

  <table>
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Origen</th>
        <th>Destino</th>
        <th>Componentes</th>
        <th>Comentario</th>
      </tr>
    </thead>
    <tbody>
      <% movimientos.forEach(m => { %>
        <tr>
          <td><%= new Date(m.fecha).toLocaleString() %></td>
          <td><%= m.origen.tipo === 'bodega' ? 'Bodega Central' : m.origenNombre %></td>
          <td><%= m.destino.tipo === 'bodega' ? 'Bodega Central' : m.destinoNombre %></td>
          <td>
            <ul>
              <% m.componentes.forEach(c => { %>
                <li><%= c.componente.nombre %> (x<%= c.cantidad %>)</li>
              <% }) %>
            </ul>
          </td>
          <td><%= m.comentario || '' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <button onclick="borrarHistorial()" class="btn-rojo">üßπ Borrar historial de movimientos</button>
  <script>
    async function borrarHistorial() {
      const confirmar = confirm("‚ö†Ô∏è ¬øEst√°s seguro de que quer√©s borrar TODO el historial?");
      if (!confirmar) return;
  
      const res = await fetch("/movimientos", {
        method: "DELETE"
      });
  
      if (res.ok) {
        alert("üßπ Historial eliminado correctamente");
        location.reload(); // recargar la p√°gina para mostrar la tabla vac√≠a
      } else {
        const msg = await res.text();
        alert("‚ùå Error al borrar historial: " + msg);
      }
    }
  </script>
  
</body>
</html>
