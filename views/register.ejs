<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registro</title>
  <link rel="stylesheet" href="/login.css">
  <style>
    .card {
      max-width: 1200px;   /* m√°s ancho */
      margin: 20px auto;
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 10px rgba(0,0,0,.06);
    }
    /* Fila superior solo para Usuario/Contrase√±a */
    .login-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      margin-bottom: 16px;
      align-items: end;
    }
    @media (max-width: 700px) {
      .login-row { grid-template-columns: 1fr; }
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 16px;
    }
    .full { grid-column: 1 / -1; }
    label { display:block; font-weight:600; margin-bottom:6px; }
    input, select {
      width:100%; padding:10px;
      border:1px solid #ddd; border-radius:8px;
      background: #fff;
      color: #000;
    }
    .btn {
      padding:10px 14px;
      border-radius:10px;
      display:inline-block;
      cursor: pointer;
    }
    .password-wrap {
      position: relative;
    }
    .toggle-pass {
      position: absolute;
      right: 10px; top: 50%;
      transform: translateY(-50%);
      border: none; background: transparent;
      cursor: pointer; font-size: 0.9rem;
    }
    h2 { margin-top:0; }
    /* Por si tu header global es fixed y tapa el inicio */
    body { scroll-padding-top: 80px; }
  </style>
</head>
<body>
  <div class="container">
    <form action="/register" method="POST" class="login-form card" id="registerForm" novalidate>
      <h2>Crear nuevo usuario</h2>

      <!-- Fila SIEMPRE visible para Usuario y Contrase√±a -->
      <div class="login-row">
        <div>
          <label>Usuario*</label>
          <input type="text" name="username" required autofocus value="<%= (values && values.username) || '' %>">
        </div>
        <div class="password-wrap">
          <label>Contrase√±a* (m√≠n. 6)</label>
          <input id="pass" type="password" name="password" required minlength="6">
          <button type="button" class="toggle-pass" aria-label="Mostrar/Ocultar" onclick="togglePassword()">üëÅ</button>
        </div>
      </div>

      <div class="grid">
        <div class="full">
          <label>Nombre completo*</label>
          <input type="text" name="nombreCompleto" required value="<%= (values && values.nombreCompleto) || '' %>">
        </div>

        <div>
          <label>C√©dula*</label>
          <input type="text" name="cedula" required inputmode="numeric" pattern="[0-9]{6,12}" value="<%= (values && values.cedula) || '' %>">
        </div>

        <div>
          <label>Email*</label>
          <input type="email" name="email" required value="<%= (values && values.email) || '' %>">
        </div>

        <div>
          <label>Celular* (solo d√≠gitos)</label>
          <input type="text" name="celular" required inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.celular) || '' %>">
        </div>

        <div>
          <label>WhatsApp (opcional)</label>
          <input type="text" name="whatsapp" inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.whatsapp) || '' %>">
        </div>

        <div>
          <label>Tel√©fono (opcional)</label>
          <input type="text" name="telefono" inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.telefono) || '' %>">
        </div>

        <div class="full">
          <label>Direcci√≥n*</label>
          <input type="text" name="direccion" required value="<%= (values && values.direccion) || '' %>">
        </div>

        <div>
          <label>Departamento*</label>
          <select name="departamento" required>
            <option value="">-- Seleccionar --</option>
            <% const deps = ["Artigas","Canelones","Cerro Largo","Colonia","Durazno","Flores","Florida","Lavalleja","Maldonado","Montevideo","Paysand√∫","R√≠o Negro","Rivera","Rocha","Salto","San Jos√©","Soriano","Tacuaremb√≥","Treinta y Tres"]; %>
            <% deps.forEach(d => { %>
              <option value="<%= d %>" <%= (values && values.departamento===d) ? 'selected' : '' %>><%= d %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label>Localidad (opcional)</label>
          <input type="text" name="localidad" value="<%= (values && values.localidad) || '' %>">
        </div>

        <div>
          <label>Puesto*</label>
          <input type="text" name="puesto" required placeholder="t√©cnico, vendedor, admin..." value="<%= (values && values.puesto) || '' %>">
        </div>

        <div>
          <label>Rol</label>
          <select name="rol">
            <option value="usuario" <%= !values || (values && values.rol==="usuario") ? "selected": "" %>>usuario</option>
            <option value="tecnico" <%= values && values.rol==="tecnico" ? "selected": "" %>>tecnico</option>
            <option value="vendedor" <%= values && values.rol==="vendedor" ? "selected": "" %>>vendedor</option>
            <option value="admin" <%= values && values.rol==="admin" ? "selected": "" %>>admin</option>
          </select>
        </div>

        <div>
          <label>Activo</label>
          <select name="activo">
            <option value="true"  <%= !values || values.activo==="true" ? "selected": "" %>>S√≠</option>
            <option value="false" <%= values && values.activo==="false" ? "selected": "" %>>No</option>
          </select>
        </div>

        <div class="full">
          <button type="submit" class="btn">Registrar</button>
        </div>
      </div>
    </form>
  </div>

  <script>
    function togglePassword() {
      const p = document.getElementById('pass');
      p.type = p.type === 'password' ? 'text' : 'password';
    }

    // Validaci√≥n m√≠nima en cliente
    const f = document.getElementById('registerForm');
    f.addEventListener('submit', (e) => {
      if (!f.checkValidity()) {
        e.preventDefault();
        const first = f.querySelector(':invalid');
        if (first) first.focus();
      }
    });
  </script>
</body>
</html>
