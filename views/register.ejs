<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Registro</title>
  <link rel="stylesheet" href="/login.css">
  <style>
   .card {
  max-width: 1200px;   /* antes 900px */
  margin: 0 auto;
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 10px rgba(0,0,0,.06);
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
  gap: 16px;
}


    .full { grid-column:1/-1; }
    label { display:block; font-weight:600; margin-bottom:6px; }
    input, select { width:100%; padding:10px; border:1px solid #ddd; border-radius:8px; }
    .btn { padding:10px 14px; border-radius:10px; display:inline-block; }
    h2 { margin-top:0; }
  </style>
</head>
<body>
  <div class="container">
    <form action="/register" method="POST" class="login-form card" id="registerForm" novalidate>
      <h2>Crear nuevo usuario</h2>

      <div class="grid">
        <div>
          <label>Usuario*</label>
          <input type="text" name="username" required value="<%= (values && values.username) || '' %>">
        </div>

        <div>
          <label>Contraseña* (mín. 6)</label>
          <input type="password" name="password" required minlength="6">
        </div>

        <div class="full">
          <label>Nombre completo*</label>
          <input type="text" name="nombreCompleto" required value="<%= (values && values.nombreCompleto) || '' %>">
        </div>

        <div>
          <label>Cédula*</label>
          <input type="text" name="cedula" required inputmode="numeric" pattern="[0-9]{6,12}" value="<%= (values && values.cedula) || '' %>">
        </div>

        <div>
          <label>Email*</label>
          <input type="email" name="email" required value="<%= (values && values.email) || '' %>">
        </div>

        <div>
          <label>Celular* (solo dígitos)</label>
          <input type="text" name="celular" required inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.celular) || '' %>">
        </div>

        <div>
          <label>WhatsApp (opcional)</label>
          <input type="text" name="whatsapp" inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.whatsapp) || '' %>">
        </div>

        <div>
          <label>Teléfono (opcional)</label>
          <input type="text" name="telefono" inputmode="numeric" pattern="[0-9]{6,15}" value="<%= (values && values.telefono) || '' %>">
        </div>

        <div class="full">
          <label>Dirección*</label>
          <input type="text" name="direccion" required value="<%= (values && values.direccion) || '' %>">
        </div>

        <div>
          <label>Departamento*</label>
          <select name="departamento" required>
            <option value="">-- Seleccionar --</option>
            <% const deps = ["Artigas","Canelones","Cerro Largo","Colonia","Durazno","Flores","Florida","Lavalleja","Maldonado","Montevideo","Paysandú","Río Negro","Rivera","Rocha","Salto","San José","Soriano","Tacuarembó","Treinta y Tres"]; %>
            <% deps.forEach(d => { %>
              <option value="<%= d %>" <%= (values && values.departamento===d) ? 'selected' : '' %>><%= d %></option>
            <% }) %>
          </select>
        </div>

        <div>
          <label>Localidad (opcional)</label>
          <input type="text" name="localidad" value="<%= (values && values.localidad) || '' %>">
        </div>

        <div>
          <label>Puesto*</label>
          <input type="text" name="puesto" required placeholder="técnico, vendedor, admin..." value="<%= (values && values.puesto) || '' %>">
        </div>

        <div>
          <label>Rol</label>
          <select name="rol">
            <option value="usuario" <%= !values || (values && values.rol==="usuario") ? "selected": "" %>>usuario</option>
            <option value="tecnico" <%= values && values.rol==="tecnico" ? "selected": "" %>>tecnico</option>
            <option value="vendedor" <%= values && values.rol==="vendedor" ? "selected": "" %>>vendedor</option>
            <option value="admin" <%= values && values.rol==="admin" ? "selected": "" %>>admin</option>
          </select>
        </div>

        <div>
          <label>Activo</label>
          <select name="activo">
            <option value="true"  <%= !values || values.activo==="true" ? "selected": "" %>>Sí</option>
            <option value="false" <%= values && values.activo==="false" ? "selected": "" %>>No</option>
          </select>
        </div>

        <div class="full">
          <button type="submit" class="btn">Registrar</button>
        </div>
      </div>
    </form>
  </div>

  <script>
    // Validación mínima en cliente
    const f = document.getElementById('registerForm');
    f.addEventListener('submit', (e) => {
      if (!f.checkValidity()) {
        e.preventDefault();
        const first = f.querySelector(':invalid');
        if (first) first.focus();
      }
    });
  </script>
</body>
</html>
